@model MeinLiX.Organisation

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Organisation</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganisationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganisationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdRegionNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdRegionNavigation.RegionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganisationWebpage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganisationWebpage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganisationFoundation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganisationFoundation)
        </dd>
    </dl>
    <div class="text-danger"> @Html.ValidationMessageFor(model => model.OrganisationName)</div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="IdOrganisation" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Organisation List</a>
    </form>
</div>
