@model MeinLiX.ContractOrganisation

@{
    ViewData["Title"] = "Contract";
}

    <h1>Organisation:@ViewBag.organisationName - Contract</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateContract">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdSponsor" class="control-label"></label>
                <select asp-for="IdSponsor" class="form-control" asp-items="ViewBag.Sponsors"></select>
                <span asp-validation-for="IdSponsor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractValidUntil" class="control-label"></label>
                <input asp-for="ContractValidUntil" class="form-control" />
                <span asp-validation-for="ContractValidUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractBalance" class="control-label"></label>
                <input asp-for="ContractBalance" class="form-control" />
                <span asp-validation-for="ContractBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}