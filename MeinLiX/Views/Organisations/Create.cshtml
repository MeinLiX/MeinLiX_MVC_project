@model MeinLiX.Organisation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Organisation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrganisationName" class="control-label"></label>
                <input asp-for="OrganisationName" class="form-control" />
                <span asp-validation-for="OrganisationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRegion" class="control-label"></label>
                <select asp-for="IdRegion" class="form-control" asp-items="ViewBag.IdRegion"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrganisationWebpage" class="control-label"></label>
                <input asp-for="OrganisationWebpage" class="form-control" />
                <span asp-validation-for="OrganisationWebpage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganisationFoundation" class="control-label"></label>
                <input asp-for="OrganisationFoundation" class="form-control" />
                <span asp-validation-for="OrganisationFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Organisation List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
