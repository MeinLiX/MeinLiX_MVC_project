@model MeinLiX.Subdivision

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Subdivision</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubdivisionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubdivisionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubdivisionFoundation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubdivisionFoundation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdGameNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdGameNavigation.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdOrganisationNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdOrganisationNavigation.OrganisationName)
        </dd>
    </dl>
    <div class="text-danger"> @Html.ValidationMessageFor(model => model.SubdivisionName)</div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSubdivision" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@ViewBag.organisationID">Back to Subdivision List</a>
    </form>
</div>
